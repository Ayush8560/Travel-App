<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".TripManagment">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#A5D6A7"
        android:text="Trip management system"
        android:textSize="20sp"
        android:textColor="#000000"
        android:gravity="center"
        android:padding="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="50dp">

        <Button
            android:id="@+id/btnInsertData"
            android:layout_width="200dp"
            android:background="@drawable/rect_button"
            android:layout_height="60dp"
            app:backgroundTint="#5C6BC0"
            android:text="Insert Data"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/btnDisplayList"
            android:layout_width="200dp"
            app:backgroundTint="#4DB6AC"
            android:background="@drawable/rect_button1"
            android:layout_height="60dp"
            android:text="Display list"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/btnDeleteData"
            android:layout_width="200dp"
            android:layout_height="60dp"
            app:backgroundTint="#673AB7"
            android:background="@drawable/rect_button2"
            android:text="Delete Data"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_margin="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayouts02"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom|center">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="bottom|center_horizontal"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/backicon" />

    </LinearLayout>


</LinearLayout>